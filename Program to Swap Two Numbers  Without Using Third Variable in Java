public class Main {
    public static void main(String[] args) {
        // Declare and initialize two integer variables
        int a = 34;
        int b = 6;

        // Print the initial values of a and b
        System.out.println("Before swapping:");
        System.out.println("a is value = " + a);
        System.out.println("b is value = " + b);

        // Swapping logic without using a third variable
        a = a + b;  // Add the values of a and b and store the result in a
        b = a - b;  // Subtract the original value of b (which is now stored in a) from the new value of a and store the result in b
        a = a - b;  // Subtract the new value of b from the new value of a to get the original value of a and store the result in a

        // Print the values of a and b after swapping
        System.out.println("\nAfter swapping:");
        System.out.println("a is value = " + a);
        System.out.println("b is value = " + b);
    }
}
